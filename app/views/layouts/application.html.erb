<!DOCTYPE html>
<html>
<head>
  <title><%= @page_title || 'Ordey | Order Management System' %></title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  <link type="text/css" rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jsgrid/1.5.3/jsgrid.min.css" />
  <link type="text/css" rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jsgrid/1.5.3/jsgrid-theme.min.css" />
  <link type="text/css" rel="stylesheet" href="https://www.jqueryscript.net/demo/Fullscreen-Loading-Indicators-with-jQuery-CSS3-HoldOn-js/src/css/HoldOn.css" />
</head>

<body class="app">
<!-- BEGIN: Mobile Menu -->
<div class="mobile-menu md:hidden">
  <div class="mobile-menu-bar">
    <a href="" class="flex mr-auto">
      <img alt="BIG MALL | Order Management system" class="w-6" src="/images/logo.svg">
    </a>
    <a href="javascript:;" id="mobile-menu-toggler"> <i data-feather="bar-chart-2" class="w-8 h-8 text-white transform -rotate-90"></i> </a>
  </div>
  <ul class="border-t border-theme-24 py-5 hidden">
    <li>
      <a href="<%= admin_path %>" class="menu menu--active">
        <div class="menu__icon"> <i data-feather="home"></i> </div>
        <div class="menu__title"> Хянах самбар </div>
      </a>
    </li>

    <li>
      <a href="<%= users_path %>" class="menu">
        <div class="menu__icon"> <i data-feather="users"></i> </div>
        <div class="menu__title"> Ажилтны бүртгэл </div>
      </a>
    </li>


    <li>
      <a href="<%= products_path %>" class="menu">
        <div class="menu__icon"> <i data-feather="edit"></i> </div>
        <div class="menu__title"> Бараа бүртгэл </div>
      </a>
    </li>

    <li>
      <a href="<%= product_report_index_path %>" class="menu">
        <div class="menu__icon"> <i data-feather="users"></i> </div>
        <div class="menu__title"> Барааны тайлан </div>
      </a>
    </li>


    <li>
      <a href="<%= orders_path %>" class="menu">
        <div class="menu__icon"> <i data-feather="file-text"></i> </div>
        <div class="menu__title"> Захиалга </div>
      </a>
    </li>

    <li>
      <a href="<%= sms_logs_path %>" class="menu">
        <div class="menu__icon"> <i data-feather="message-circle"></i> </div>
        <div class="menu__title"> Sms log </div>
      </a>
    </li>

    <li>
      <a href="<%= deliveries_path %>" class="menu">
        <div class="menu__icon"> <i data-feather="message-circle"></i> </div>
        <div class="menu__title"> Хүргэлт </div>
      </a>
    </li>

    <li>
      <a href="<%= logs_path %>" class="menu">
        <div class="menu__icon"> <i data-feather="file-text"></i> </div>
        <div class="menu__title"> Түүхүүд </div>
      </a>
    </li>
  </ul>
</div>
<!-- END: Mobile Menu -->
<div class="flex main-screen">
  <!-- BEGIN: Side Menu -->
  <nav class="side-nav">
    <a href="" class="intro-x flex items-center pl-5 pt-4">
      <img alt="Ordery" class="w-6" src="/images/logo.svg">
      <span class="hidden xl:block text-white text-lg ml-3"> BIG<span class="font-medium"> MALL</span> </span>
    </a>
    <div class="side-nav__devider my-6"></div>
    <ul>
      <li>
        <a href="<%= admin_path %>" class="side-menu <% if @page_dashboard_active %>side-menu--active <% end %>">
          <div class="side-menu__icon"> <i data-feather="home"></i> </div>
          <div class="side-menu__title"> Хянах самбар </div>
        </a>
      </li>

      <li>
        <a href="<%= users_path %>" class="side-menu <% if @page_users_active %>side-menu--active <% end %>">
          <div class="side-menu__icon"> <i data-feather="users"></i> </div>
          <div class="side-menu__title"> Ажилтны бүртгэл </div>
        </a>
      </li>

      <li>
        <a href="<%= products_path %>" class="side-menu <% if @page_products_active %>side-menu--active <% end %>">
          <div class="side-menu__icon"> <i data-feather="edit"></i> </div>
          <div class="side-menu__title"> Бараа бүртгэл </div>
        </a>
      </li>


      <li>
        <a href="<%= product_report_index_path %>" class="side-menu <% if @page_product_report_active %>side-menu--active <% end %>">
          <div class="side-menu__icon"> <i data-feather="shopping-bag"></i> </div>
          <div class="side-menu__title"> Барааны тайлан </div>
        </a>
      </li>



      <li>
        <a href="<%= orders_path %>" class="side-menu <% if @page_orders_active %>side-menu--active <% end %>">
          <div class="side-menu__icon"> <i data-feather="file-text"></i> </div>
          <div class="side-menu__title"> Захиалгын түүх </div>
        </a>
      </li>

      <li>
        <a href="<%= clients_path %>" class="side-menu <% if @page_clients_active %>side-menu--active <% end %>">
          <div class="side-menu__icon"> <i data-feather="user-check"></i> </div>
          <div class="side-menu__title"> Хэрэглэгч </div>
        </a>
      </li>

      <li>
        <a href="<%= deliveries_path %>" class="side-menu <% if @page_delivery_active %>side-menu--active <% end %>">
          <div class="side-menu__icon"> <i data-feather="truck"></i> </div>
          <div class="side-menu__title"> Хүргэлт </div>
        </a>
      </li>

      <li>
        <a href="<%= sms_logs_path %>" class="side-menu <% if @page_sms_active %>side-menu--active <% end %>">
          <div class="side-menu__icon"> <i data-feather="message-circle"></i> </div>
          <div class="side-menu__title"> Sms log </div>
        </a>
      </li>

      <li>
        <a href="<%= reports_path %>" class="side-menu <% if @page_report_active %>side-menu--active <% end %>">
          <div class="side-menu__icon"> <i data-feather="award"></i> </div>
          <div class="side-menu__title"> Тайлан </div>
        </a>
      </li>

      <li>
        <a href="<%= logs_path %>" class="side-menu <% if @page_logs_active %>side-menu--active <% end %>">
          <div class="side-menu__icon"> <i data-feather="file-text"></i> </div>
          <div class="side-menu__title"> Түүхүүд </div>
        </a>
      </li>
    </ul>
  </nav>
  <!-- END: Side Menu -->
  <!-- BEGIN: Content -->
  <div class="content">
    <!-- BEGIN: Top Bar -->
    <div class="top-bar">
      <!-- BEGIN: Breadcrumb -->
      <div class="-intro-x breadcrumb mr-auto hidden sm:flex"> <a href="" class="">Ordery</a> <i data-feather="chevron-right" class="breadcrumb__icon"></i> <a href="" class="breadcrumb--active"><%= @page_title || 'Order Management System' %></a> </div>
      <!-- END: Breadcrumb -->
      <!-- BEGIN: Search -->
      <div class="intro-x relative mr-3 sm:mr-6">
        <div class="search hidden sm:block">
          <input type="text" class="search__input input placeholder-theme-13" name="search-number" placeholder="Утас, Дансны дугаар">
          <i data-feather="search" class="search__icon dark:text-gray-300"></i>
        </div>
        <a class="notification sm:hidden" href=""> <i data-feather="search" class="notification__icon dark:text-gray-300"></i> </a>

      </div>
      <!-- END: Search -->
      <!-- BEGIN: Account Menu -->
      <div class="intro-x dropdown w-8 h-8">
        <div class="dropdown-toggle w-8 h-8 rounded-full overflow-hidden shadow-lg image-fit zoom-in">
          <img alt="Midone Tailwind HTML Admin Template" src="/images/profile-12.jpg">
        </div>
        <% if current_user.present? %>
          <div class="dropdown-box w-56">
            <div class="dropdown-box__content box bg-theme-38 dark:bg-dark-6 text-white">
              <div class="p-4 border-b border-theme-40 dark:border-dark-3">
                <div class="font-medium"><%= current_user.first_name%></div>
                <div class="text-xs text-theme-41 mt-0.5 dark:text-gray-600"><%= current_user.email%></div>
              </div>
              <div class="p-2">
                <a href="" class="flex items-center block p-2 transition duration-300 ease-in-out hover:bg-theme-1 dark:hover:bg-dark-3 rounded-md"> <i data-feather="user" class="w-4 h-4 mr-2"></i> Профайл </a>
              </div>
              <div class="p-2 border-t border-theme-40 dark:border-dark-3">
                <%= link_to '<i data-feather="toggle-right" class="w-4 h-4 mr-2"></i>Гарах'.html_safe, destroy_user_session_path, :method => :delete, class: 'flex items-center block p-2 transition duration-300 ease-in-out hover:bg-theme-1 dark:hover:bg-dark-3 rounded-md' %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <!-- END: Account Menu -->
    </div>

    <!-- END: Top Bar -->
    <%= yield %>
  </div>
  <!-- END: Content -->
</div>
<script src="https://www.jqueryscript.net/demo/Fullscreen-Loading-Indicators-with-jQuery-CSS3-HoldOn-js/src/js/HoldOn.js"></script>
<script>
    function startLoader(){
        HoldOn.open({
            theme: 'sk-rect',
            message: "<h4>Уншиж байна. Түр хүлээнэ үү</h4>"
        })
    }
    function closeLoader(){
        HoldOn.close();
    }
</script>
<%= javascript_pack_tag 'custom' %>

<% if flash.any? %>
  <script type="text/javascript">
      <% flash.each do |key, value| %>
      <% type = key.to_s.gsub('alert', '#D32929').gsub('notice', '#91C714') %>
      Toastify({
          text: "<%= value %>",
          duration: 3000,
          newWindow: true,
          close: true,
          gravity: "bottom",
          position: "right",
          backgroundColor: "<%= type %>",
          stopOnFocus: true,
      }).showToast();
      <% end %>
  </script>
<% end %>
<script>
    $('input[name="search-number"]').keypress(function (e) {
        var key = e.which;
        var searchKeyword = $(this).val();
        if(key == 13)
        {
            href= "/histories?search_keyword=" + $(this).val()
            window.location.href = href
        }
    });
</script>
</body>
</html>
