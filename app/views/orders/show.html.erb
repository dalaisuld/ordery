<%= form_with model: @order, local: true do |f| %>
  <div class="grid grid-cols-12 gap-6">
    <div class="col-span-12 xxl:col-span-9 grid grid-cols-12 gap-6">
      <div class="col-span-12 mt-8">
        <div class="intro-y flex items-center h-10">
          <h2 class="text-lg font-medium truncate mr-5">
            Захиалгийн дугаар: <%= @order.id %>
          </h2>
        </div>
      </div>
      <div class="col-span-12 lg:col-span-12">
        <div class="intro-y box p-5">

          <div class="mt-3">
            <label>Захилгийн дугаар</label>
            <input class="input w-full border mt-2" value="<%= @order.id %>" disabled>
          </div>

          <div class="mt-3">
            <label>Дансны дугаар</label>
            <input class="input w-full border mt-2" value="<%= @order.account_number %>" disabled>
          </div>

          <div class="mt-3">
            <label>Гүйлгээний дугаар</label>
            <input class="input w-full border mt-2" value="<%= @order.description %>" disabled>
          </div>

          <div class="mt-3">
            <label>Гүйлгээний огноо</label>
            <input class="input w-full border mt-2" value="<%= @order.transition_date %>" disabled>
          </div>

          <div class="mt-3">
            <label>Утасны дугаар</label>
            <%= f.text_field :phone_number, class: "input w-full border mt-2"%>
          </div>

          <div class="mt-3">
            <label>Бүтээгдэхүүн</label>
            <input class="input w-full border mt-2" value="<%= @order.product.name %>" disabled>
          </div>


          <div class="mt-3">
            <div class="grid grid-cols-12 gap-2">
              <div class="col-span-4">
                <label for="">Шилжүүлсэн үнэ</label>
                <input type="text" class="input w-full border mt-2" value="<%= number_to_currency(@order.amount, unit: "₮", strip_insignificant_zeros: true) %>" disabled>
              </div>
              <div class="col-span-4">
                <label for="">Бүтээгдэхүүний үнэ</label>
                <input type="text" class="input w-full border mt-2" value="<%= number_to_currency(@order.product.price, unit: "₮", strip_insignificant_zeros: true) %>" disabled>
              </div>
              <div class="col-span-4">
                <label for="">Каргоны төлбөр</label>
                <input type="text" class="input w-full border mt-2" value="<%= number_to_currency(@order.cargo_price, unit: "₮", strip_insignificant_zeros: true)%>" disabled>
              </div>
            </div>
          </div>

          <div class="mt-3">
            <label>Хүргүүлэх хаяг</label>
            <%= f.text_area :address, class: "input w-full border mt-2", placeholder: 'Хүргүүлэх хаяг', :rows => 4 %>
          </div>

          <div class="mt-3"> <label>Захиалгийн төлөв</label>
            <div class="flex flex-col sm:flex-row mt-2">
              <div class="flex items-center text-gray-700 dark:text-gray-500 mr-2"> <input type="radio" class="input border mr-2" id="horizontal-radio-chris-evans" name="horizontal_radio_button" value="horizontal-radio-chris-evans"> <label class="cursor-pointer select-none" for="horizontal-radio-chris-evans">Chris Evans</label> </div>
              <div class="flex items-center text-gray-700 dark:text-gray-500 mr-2 mt-2 sm:mt-0"> <input type="radio" class="input border mr-2" id="horizontal-radio-liam-neeson" name="horizontal_radio_button" value="horizontal-radio-liam-neeson"> <label class="cursor-pointer select-none" for="horizontal-radio-liam-neeson">Liam Neeson</label> </div>
              <div class="flex items-center text-gray-700 dark:text-gray-500 mr-2 mt-2 sm:mt-0"> <input type="radio" class="input border mr-2" id="horizontal-radio-daniel-craig" name="horizontal_radio_button" value="horizontal-radio-daniel-craig"> <label class="cursor-pointer select-none" for="horizontal-radio-daniel-craig">Daniel Craig</label> </div>
            </div>
          </div>

          <div class="mt-3">
            <div class="flex items-center text-gray-700 dark:text-gray-500 mt-5">
              <input type="checkbox" class="input border mr-2" id="vertical-remember-me">
              <label class="cursor-pointer select-none" for="vertical-remember-me">Хүргүүлж авах</label>
            </div>
          </div>

          <div class="mt-3">
            <div class="flex items-center text-gray-700 dark:text-gray-500 mt-5">
              <input type="checkbox" class="input border mr-2" id="vertical-remember-me">
              <label class="cursor-pointer select-none" for="vertical-remember-me">Агуулхаас авах зөвшөөрөл</label>
            </div>
          </div>

          <%= f.submit "Хадгалах", :class => 'button bg-theme-1 w-full text-white mt-5', name: 'update' %>
        </div>
      </div>
    </div>
    <div class="col-span-12 xxl:col-span-3 xxl:border-l border-theme-5 -mb-10 pb-10">
      <div class="xxl:pl-6 grid grid-cols-12 gap-6">
        <div class="col-span-12 md:col-span-6 xl:col-span-4 xxl:col-span-12 mt-3 xxl:mt-8">
          <div class="intro-x flex items-center h-10">
            <h2 class="text-lg font-medium truncate mr-5">
              Захиалга хэвлэх
            </h2>
          </div>
          <div class="mt-5">

          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>